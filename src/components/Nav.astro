---
import astroLogo from "../assets/astro.svg";
import HamburgerMenu from "./HamburgerMenu";
---

<header
  class="flex items-center justify-between px-3 md:justify-around py-1 md:px-[5%]"
>
  <div class="hidden side-menu md:flex gap-4 h-20" id="left-menu">
    <div class="menu-item text-xl flex justify-center items-center h-auto">
      <a href="/" class="font-medium tracking-wide px-4">Home</a>
    </div>
    <div class="menu-item text-xl flex justify-center items-center h-auto">
      <a href="/" class="font-medium tracking-wide px-4">About</a>
    </div>
  </div>
  <div class="flex items-center gap-4 my-2" id="logo">
    <img class="h-16" src={astroLogo.src} alt="Astro Homepage" />
  </div>
  <div class="hidden side-menu md:flex gap-4 h-20" id="right-menu">
    <div class="menu-item text-xl flex justify-center items-center h-auto">
      <a href="/" class="font-medium tracking-wide px-4">Pricing</a>
    </div>
    <div class="menu-item text-xl flex justify-center items-center h-auto">
      <a href="/" class="font-medium tracking-wide px-4">Contact</a>
    </div>
  </div>
  <div class="md:hidden" id="burger">
    <HamburgerMenu client:idle />
  </div>
</header>
<style>
  .menu-item {
    color: whitesmoke;
    transition: 0.3s ease-in-out all;
    background: transparent;
  }

  .menu-item:hover {
    cursor: pointer;
    background: linear-gradient(
      180deg,
      rgba(0, 19, 89, 0.33) 0%,
      rgba(0, 31, 145, 0.884) 97%
    );
  }
</style>

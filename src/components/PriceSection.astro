    font-weight: 500;
  }
  .select-button:hover {
    opacity: 0.75;
  }
  .selected {
    background-color: white;
    color: black;
  }
  .subscribe {
    padding: 0.75rem;
    transition: all 0.15s ease-in-out;
    border-radius: 4px;
    background-color: rgb(12, 12, 12);
    color: white;
    font-weight: bold;
    border: #272727 1px solid;
  }
  .subscribe:hover {
    background-color: white;
    color: black;
  }
  .subscribe:active {
    background-color: #e4e4e4ba;
  }
</style>
